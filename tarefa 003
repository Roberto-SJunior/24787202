//c
#include <stdio.h>
#include <stdlib.h>

int main (){
int idade;
char nome;
printf("Digite seu nome: ");
    scanf("%s",&nome);

printf("Qual sua idade: ");
    scanf("%d",&idade);

int vida = idade*365;

printf("Voce tem %.2d dias de vida \n\n", vida);

return(0);
}
