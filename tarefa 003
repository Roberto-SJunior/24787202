//f

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main ()
{
float temp;
double graus;
printf("Escreva a temperatura em farenheit: ");
    scanf("%f",&temp);

graus = 5/9;

printf("Temperatura em graus centigrados %.3lf \n",graus);

return(0);
}

