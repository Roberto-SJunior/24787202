#include <stdio.h>
#include <stdlib.h>

int main ()
{
float num1,num2,num3;
char nome;
printf("Ola eu sou o N1, como e o seu nome? ");
scanf("%s",&nome);

printf("Bem vindo ao clube: %s\n",nome);

return(0);
}
