//c
#include <stdio.h>
#include <stdlib.h>

int main ()
{
int idade;
char nome;
printf("Digite seu nome: ");
    scanf("%s",&nome);

printf("Qual sua idade: ");
    scanf("%d",&idade);

int vida = idade*365;

printf("Voce tem %.2d dias de vida \n\n", vida);

return(0);
}
______________________________________________________________________________
//d

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main ()
{
float raio;
printf("Qual o raio do circulo: ");
    scanf("%f",&raio);

float z = pow(raio, 2);
float area = 3.14*z;

printf("Area do circulo: %.2f \n", area  );
    scanf("%d",&area);

return(0);
}
