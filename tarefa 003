//f

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main (){
float fahrenheit,celsius;
printf("Digite a temperatura em fahrenheit: ");
    scanf("%f",&fahrenheit);

celsius = (5.0 / 9.0) * (fahrenheit - 32);

printf("Temperatura em graus centigrados: %.3lf \n",celsius);

return(0);
}

