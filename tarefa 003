//d

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main (){
float raio;
printf("Qual o raio do circulo: ");
    scanf("%f",&raio);

float z = pow(raio, 2);
float area = 3.14*z;

printf("Area do circulo: %.2f \n", area  );
    scanf("%d",&area);

return(0);
}
