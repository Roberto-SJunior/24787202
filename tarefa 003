//A
#include <stdio.h>
#include <stdlib.h>

int main ()
{
float num1,num2,num3;
printf("Digite o primeiro numero: ");
scanf("%f",&num1);
printf("Digite o segundo numero: ");
scanf("%f",&num2);
printf("Digite o terceiro numero: ");
scanf("%f",&num3);

printf("Numeros em ordem inversa: %.2f %.2f %.2f\n", num3,num2,num1 );
return(0);
