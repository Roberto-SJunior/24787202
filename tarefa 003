//e
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main (){
float altura,largura,latas;
printf("Digite a altura da parede: ");
    scanf("%f",&altura);
printf("Digite a largura da parede: ");
    scanf("%f",&largura);
    
latas = (0.3*(altura*largura))/2;

printf("Quantidade de latas necessarias: %.3lf \n",ceil(latas));

return(0);
}
