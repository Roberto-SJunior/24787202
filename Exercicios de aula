//1) afirmador de visitantes
#include <stdio.h>
#include <stdlib.h> 
int main()
{

#include <stdio.h>
int visitantes;
scanf ("%d",&visitantes);
print()
printf("o numero de visitantes é:%.2d/n",visitantes);
return(0);
}
